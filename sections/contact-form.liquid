<div class="flex flex-col items-col my-8">
  {% form 'contact' %}
    <div class="max-w-2xl mx-auto flex-1 justify-center items-center px-4">
      {% if section.settings.title %}
        <h1 class="text-3xl font-medium my-8 md:my-16 text-center text-red-800">{{ section.settings.title }}</h1>
      {% endif %}
      {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row items-center w-full my-3">
            <div class="text-red-600">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">oh no! Your message is not sent</div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>
                <span>{{ form.errors.messages[error] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-green-600">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">Your message is sent successfully</div>
        </div>
      {% endif %}
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-red-800 font-medium" for="contact_name">Name</label>
          <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
        </div>
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-red-800 font-medium" for="contact_email">Email</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            type="email"
            name="contact[email]"
            id="contact_email"
          >
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="px-3 w-full ">
          <label class="uppercase text-xs text-red-800 font-medium" for="contact_message">Contact Message</label>
          <textarea
            class="border py-3 px-4 mb-3 text-gray-70 w-full"
            name="contact[body]"
            id="contact_message"
          ></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="px-3 w-full">
          <input
            type="submit"
            value="Submit Message"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-red-900 text-white hover:bg-red-700"
          >
        </div>
      </div>
    </div>
  {% endform %}
</div>
{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
