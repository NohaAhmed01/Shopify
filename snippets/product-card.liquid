<div class="w-full py-6 px-3">
  <div class="transition duration-750 ease-in-out hover:scale-105 transform bg-red-100 hover:bg-red-50 shadow-xl rounded-lg overflow-hidden h-full">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover "
            src="{{ product_product.featured_image | img_url: 'medium'}}"
            alt="{{ product_product.featured_image.alt }}"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}</a>
      {% if vendor-enable %}
        <span class="text-sm">{{ product_product.vendor }}</span>
      {% endif %}
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>
